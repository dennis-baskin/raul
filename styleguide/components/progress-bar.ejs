<%- include('/partials/header', {
  domain: 'Components',
  id: 'progress-bar',
  page: 'Progress Bar',
  noContentPadding: true,
}) %>

<% const showPercentClass = 'show-percent' %>
<% const animateClass = 'animate' %>

<div class="row">
  <div class="col-12 background-light-grey pt-3">
    <ul class="raul-nav nav nav-tabs raul-nav-underline" role="tablist">
      <li class="nav-item">
        <a
          class="nav-link active"
          href="#html-version"
          role="tab"
          data-toggle="tab"
          aria-expanded="true"
        >
          HTML version
        </a>
      </li>
    </ul>
  </div>
</div>

<div class="raul-tab-content tab-content mt-3">
  <div role="tabpanel" class="tab-pane active" id="html-version">
    <h2 class="mb-3">Basic examples</h2>

    <div class="row">
      <div class="col-12 col-md-6">
        <h3 class="mb-3">Default</h3>

        <div class="raul-card">
          <%- include('/components/partials/progress-bar/html/progress-bar', {additionalClasses: ''}) %>
        </div>

        <div class="raul-card mb-5 p-0">
          <pre class="mb-0"><code class="language-markup"><%=
            include('/components/partials/progress-bar/html/progress-bar', {additionalClasses: ''})
          %></code></pre>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <h3 class="mb-3">Light progress bar (add <code>.raul-progress-light</code>) to wrapper</h3>

        <div class="raul-card background-charcoal-10">
          <%- include('/components/partials/progress-bar/html/progress-bar-light') %>
        </div>

        <div class="raul-card mb-5 p-0">
          <pre class="mb-0"><code class="language-markup"><%=
            include('/components/partials/progress-bar/html/progress-bar-light')
          %></code></pre>
        </div>
      </div>
    </div>

    <h2 class="mb-3">Complex examples</h2>

    <div class="row">
      <div class="col-12 col-md-6">
        <h3 class="mb-3">Progress bar with percent (add <code>.<%= showPercentClass %></code>) to progress bar</h3>

        <div class="raul-card">
          <%- include('/components/partials/progress-bar/html/progress-bar', {additionalClasses: showPercentClass}) %>
        </div>

        <div class="raul-card mb-5 p-0">
          <pre class="mb-0"><code class="language-markup"><%=
            include('/components/partials/progress-bar/html/progress-bar', {additionalClasses: showPercentClass})
          %></code></pre>
        </div>
      </div>

      <div class="col-12 col-md-6">
        <h3 class="mb-3">Progress bar with animation (add <code>.<%= animateClass %></code>) to progress bar</h3>

        <div class="raul-card">
          <%- include('/components/partials/progress-bar/html/progress-bar', {additionalClasses: animateClass}) %>
        </div>

        <div class="raul-card mb-5 p-0">
          <pre class="mb-0"><code class="language-markup"><%=
            include('/components/partials/progress-bar/html/progress-bar', {additionalClasses: animateClass})
          %></code></pre>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <h3 class="mb-3">Progress bar with multiple items</h3>

        <div class="raul-card">
          <%- include('/components/partials/progress-bar/html/progress-bar-multiple') %>
        </div>

        <div class="raul-card mb-5 p-0">
          <pre class="mb-0"><code class="language-markup"><%=
            include('/components/partials/progress-bar/html/progress-bar-multiple')
          %></code></pre>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('/partials/footer') %>
