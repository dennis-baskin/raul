      <div class="row">
        <div class="col-12 col-md-6 col-xl-4">
          <ui-datepicker date-range date-range-group></ui-datepicker>
        </div>
      </div>
    </div>

    <div class="raul-card mb-5 p-0">
      <pre class="mb-0"><code class="language-html"><%= (`
        <ui-datepicker date-range date-range-group></ui-datepicker>
      `) %></code></pre>
